set tabstop=4
set shiftwidth=4
set number
set noendofline
set binary
set lazyredraw
set ttyfast
set nocompatible
set backspace=indent,eol,start
set expandtab
set autoindent
set wildmenu
set ambiwidth=double
set ignorecase
set smartcase

vnoremap > >gv
vnoremap < <gv
" Press `t` to activate AceJump
map t :<C-u>action AceAction<CR>

" 編集モードでのカーソル移動
inoremap <C-j> <Down>
inoremap <C-k> <Up>
inoremap <C-h> <Left>
inoremap <C-l> <Right>
inoremap <C-a> <Home>
inoremap <C-e> <End>
inoremap <C-w> <C-o>w
inoremap <C-b> <C-o>b

" tabページ
nnoremap fn :<C-u>tabnew<CR>
nnoremap fw :<C-u>q<CR>
nnoremap fo :<C-u>tabo<CR>:<C-u>q<CR>

" window分割
nnoremap fs <C-w>s
nnoremap fv :<C-u>vs<CR>
nnoremap fj <C-w>j
nnoremap fk <C-w>k
nnoremap fl <C-w>l
nnoremap fh <C-w>h

set clipboard=unnamed

